@model IQueryable<QLivros.Models.TabExemplar>
@{
    ViewBag.Title = "Lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>

<h2>Lista de Exemplares</h2>

<ul class="list-group">
    @foreach (var exemplar in Model)
    {
        <li class="list-group-item">Titulo: @exemplar.TabTitulo.nmTitulo <br /> 
                                    Edição: @exemplar.dsEdicao <br />
                                    Editora: @exemplar.nmEditora
        </li>
        foreach (var i in exemplar.TabHistorico)
        {
            <li class="list-group-item">
                Localização: @i.TabLeitor.TabLogradouroEnd.TabBairro.TabCidade.TabEstado.nmEstado| @i.TabLeitor.TabLogradouroEnd.TabBairro.TabCidade.nmCidade | @i.TabLeitor.TabLogradouroEnd.TabBairro.nmBairro | <br />
                Email: @i.TabLeitor.dsEmail <br />
                Celular: @i.TabLeitor.numCel

            </li>
        }
        <br />
    }
</ul>


